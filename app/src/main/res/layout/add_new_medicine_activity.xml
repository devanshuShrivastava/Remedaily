<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".AddNewMedicineActivity">

        <EditText
            android:id = "@+id/newMedicineNameField"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems = "10"
            android:inputType="textPersonName"
            android:hint="fill new medicine name"/>

        <Switch
            android:id="@+id/sameScheduleToAllDaysSwitch"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:layout_below = "@+id/newMedicineNameField"/>


        <Button
            android:id="@+id/Monday"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/sameScheduleToAllDaysSwitch"
            android:text="Mo"
            android:textSize="25sp" />
        <Button
            android:id="@+id/Tuesday"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/sameScheduleToAllDaysSwitch"
            android:layout_toRightOf="@+id/Monday"
            android:text="Tu"
            android:textSize="25sp" />
        <Button
            android:id="@+id/Wednesday"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/sameScheduleToAllDaysSwitch"
            android:layout_toRightOf="@+id/Tuesday"
            android:text="We"
            android:textSize="25sp" />

        <Button
            android:id="@+id/Thursday"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/sameScheduleToAllDaysSwitch"
            android:layout_toRightOf="@+id/Wednesday"
            android:text="Th"
            android:textSize="25sp" />
        <Button
            android:id="@+id/Friday"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/Monday"
            android:text="Fr"
            android:textSize="25sp" />
        <Button
            android:id="@+id/Saturday"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/Monday"
            android:layout_toRightOf="@+id/Friday"
            android:text="Sa"
            android:textSize="25sp" />

        <Button
            android:id="@+id/Sunday"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/Monday"
            android:layout_toRightOf="@+id/Saturday"
            android:text="Su"
            android:textSize="25sp" />

        <Button
            android:id="@+id/addTimeButton"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/Friday"
            android:text="Add Time"
            android:textSize="25sp" />

        <Button
            android:id="@+id/saveButton"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/Friday"
            android:layout_toRightOf="@+id/addTimeButton"
            android:text="Save"
            android:textSize="25sp" />

        <ListView
            android:id = "@+id/timeEntriesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/addTimeButton"
            android:layout_centerHorizontal = "true"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="5sp"
            android:layout_marginStart="2sp"
            android:layout_marginEnd="2sp"
            android:divider="@null"
            android:dividerHeight="0dp"/>

</RelativeLayout>